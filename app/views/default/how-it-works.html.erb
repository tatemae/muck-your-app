    gem "muck-comments"
    gem "muck-contents"
    gem "muck-profiles"
    gem "muck-activities"
    gem "muck-friends"
    gem "muck-shares"
    gem "muck-invites"
    gem "muck-services"
    gem "muck-auth"
  </pre>
  
